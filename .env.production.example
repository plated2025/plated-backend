# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# ⚠️  IMPORTANT: Replace all placeholder values with your actual production credentials
# ⚠️  NEVER commit this file with real values to Git!

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Database - Production Atlas Cluster
MONGODB_URI=mongodb+srv://production_user:CHANGE_THIS_PASSWORD@production-cluster.mongodb.net/plated_production?retryWrites=true&w=majority

# JWT Authentication - MUST BE DIFFERENT FROM DEVELOPMENT
JWT_SECRET=CHANGE_THIS_TO_PRODUCTION_SECRET_128_CHARS_MINIMUM
JWT_EXPIRE=7d

# Frontend URL - Your production domain
FRONTEND_URL=https://plated.cloud
CLIENT_URL=https://plated.cloud

# Rate Limiting - Stricter for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Cookie Security
COOKIE_SECRET=CHANGE_THIS_TO_PRODUCTION_COOKIE_SECRET
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Cloudinary (Image/Video Uploads)
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Redis Cache - Production Upstash or Redis Cloud
REDIS_URL=redis://default:YOUR_PRODUCTION_REDIS_PASSWORD@your-redis-url.com:6379

# Google OAuth (Sign in with Google) - Production Credentials
GOOGLE_CLIENT_ID=your-production-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-client-secret
GOOGLE_CALLBACK_URL=https://api.plated.cloud/api/auth/google/callback

# Apple OAuth (Sign in with Apple) - Production Credentials
APPLE_CLIENT_ID=com.plated.app
APPLE_TEAM_ID=your-team-id
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY_PATH=./config/AuthKey_Production.p8
APPLE_CALLBACK_URL=https://api.plated.cloud/api/auth/apple/callback

# Google Gemini AI (AI Features)
GEMINI_API_KEY=your-production-gemini-api-key

# Email Configuration - Production SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@plated.cloud
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=Plated <noreply@plated.cloud>

# Security Headers
CORS_ORIGIN=https://plated.cloud
ALLOWED_ORIGINS=https://plated.cloud,https://www.plated.cloud

# Encryption
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/production.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Database Backup (Optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
